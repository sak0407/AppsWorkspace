import java.util.Arrays;
import java.util.List;
import java.util.stream.Collectors;
import java.util.stream.Stream;

public class Class {

	String s="I alove java 8 program ";
	
	String[] str= Arrays.stream(s.split("\\s")).map(String::toUpperCase).toArray(String[]::new);
	
	Stream<String> st= Stream.of(str);
	
	List<String> list=st.collect(Collectors.toList()).forEach(x->System.out.println(x););;
	
	
			
	
}
